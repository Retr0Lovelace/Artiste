{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard{% endblock %}
{% block page_title %}Dashboard{% endblock %}

{% block content %}
    {# Statistiques #}
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Utilisateurs</h6>
                        <h2 class="mb-0">{{ stats.users }}</h2>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-users text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Articles</h6>
                        <h2 class="mb-0">{{ stats.articles }}</h2>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-shopping-bag text-success"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Commandes</h6>
                        <h2 class="mb-0">0</h2>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-receipt text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-2">Revenus</h6>
                        <h2 class="mb-0">0€</h2>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-euro-sign text-info"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Utilisateurs récents #}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Utilisateurs récents</h5>
                    <a href="{{ path('app_admin_users') }}" class="btn btn-sm btn-primary">
                        <i class="fas fa-users"></i> Voir tous
                    </a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Email</th>
                                    <th>Nom</th>
                                    <th>Nom d'utilisateur</th>
                                    <th>Rôles</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in stats.recent_users %}
                                    <tr>
                                        <td>{{ user.id }}</td>
                                        <td>{{ user.email }}</td>
                                        <td>{{ user.firstname }} {{ user.lastname }}</td>
                                        <td>{{ user.username ?? '-' }}</td>
                                        <td>
                                            {% for role in user.roles %}
                                                <span class="badge bg-{{ role == 'ROLE_ADMIN' ? 'danger' : 'secondary' }}">
                                                    {{ role }}
                                                </span>
                                            {% endfor %}
                                        </td>
                                        <td>
                                            <a href="{{ path('app_admin_user_show', {id: user.id}) }}" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_admin_user_edit', {id: user.id}) }}" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center text-muted py-4">
                                            Aucun utilisateur trouvé
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
