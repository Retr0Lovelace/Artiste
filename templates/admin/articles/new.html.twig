{% extends 'admin/base.html.twig' %}

{% block title %}Nouvel article{% endblock %}
{% block page_title %}Créer un nouvel article{% endblock %}

{% block content %}
    <div class="mb-3">
        <a href="{{ path('app_admin_articles') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Formulaire de création</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label for="{{ form.title.vars.id }}" class="form-label">{{ form.title.vars.label }}</label>
                                {{ form_widget(form.title) }}
                                {{ form_errors(form.title) }}
                            </div>

                            <div class="col-md-12 mb-3">
                                <label for="{{ form.description.vars.id }}" class="form-label">{{ form.description.vars.label }}</label>
                                {{ form_widget(form.description) }}
                                {{ form_errors(form.description) }}
                            </div>

                            <div class="col-md-12 mb-3">
                                <label for="{{ form.image.vars.id }}" class="form-label">{{ form.image.vars.label }}</label>
                                {{ form_widget(form.image) }}
                                {{ form_errors(form.image) }}
                                <small class="form-text text-muted">Exemple: img/article1.png</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="{{ form.price.vars.id }}" class="form-label">{{ form.price.vars.label }}</label>
                                {{ form_widget(form.price) }}
                                {{ form_errors(form.price) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="{{ form.stock.vars.id }}" class="form-label">{{ form.stock.vars.label }}</label>
                                {{ form_widget(form.stock) }}
                                {{ form_errors(form.stock) }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('app_admin_articles') }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Créer l'article
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Informations</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-0">
                        <i class="fas fa-info-circle"></i>
                        <small>
                            <strong>Conseils :</strong>
                            <ul class="mb-0 mt-2">
                                <li>Titre court et descriptif</li>
                                <li>Description claire et attrayante</li>
                                <li>Prix en euros (ex: 29.99)</li>
                                <li>Stock optionnel</li>
                            </ul>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
