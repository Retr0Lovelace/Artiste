{% extends 'admin/base.html.twig' %}

{% block title %}Modifier l'utilisateur #{{ user.id }}{% endblock %}
{% block page_title %}Modifier l'utilisateur #{{ user.id }}{% endblock %}

{% block content %}
    <div class="mb-3">
        <a href="{{ path('app_admin_users') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
        <a href="{{ path('app_admin_user_show', {id: user.id}) }}" class="btn btn-info">
            <i class="fas fa-eye"></i> Voir les détails
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Formulaire d'édition</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label for="{{ form.email.vars.id }}" class="form-label">{{ form.email.vars.label }}</label>
                                {{ form_widget(form.email) }}
                                {{ form_errors(form.email) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="{{ form.firstname.vars.id }}" class="form-label">{{ form.firstname.vars.label }}</label>
                                {{ form_widget(form.firstname) }}
                                {{ form_errors(form.firstname) }}
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="{{ form.lastname.vars.id }}" class="form-label">{{ form.lastname.vars.label }}</label>
                                {{ form_widget(form.lastname) }}
                                {{ form_errors(form.lastname) }}
                            </div>

                            <div class="col-md-12 mb-3">
                                <label for="{{ form.username.vars.id }}" class="form-label">{{ form.username.vars.label }}</label>
                                {{ form_widget(form.username) }}
                                {{ form_errors(form.username) }}
                            </div>

                            <div class="col-md-12 mb-3">
                                <label for="{{ form.avatar.vars.id }}" class="form-label">{{ form.avatar.vars.label }}</label>
                                {{ form_widget(form.avatar) }}
                                {{ form_errors(form.avatar) }}
                                <small class="form-text text-muted">Entrez l'URL de l'image d'avatar</small>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label for="{{ form.bio.vars.id }}" class="form-label">{{ form.bio.vars.label }}</label>
                                {{ form_widget(form.bio) }}
                                {{ form_errors(form.bio) }}
                            </div>

                            <div class="col-md-12 mb-3">
                                <label class="form-label">{{ form.roles.vars.label }}</label>
                                <div class="p-3 bg-light rounded">
                                    {{ form_widget(form.roles) }}
                                    {{ form_errors(form.roles) }}
                                </div>
                                <small class="form-text text-muted">Sélectionnez les rôles de l'utilisateur</small>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('app_admin_users') }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Enregistrer les modifications
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Informations</h5>
                </div>
                <div class="card-body">
                    <p><strong>ID:</strong> {{ user.id }}</p>
                    <p><strong>Email actuel:</strong><br>{{ user.email }}</p>
                    <hr>
                    <div class="alert alert-info mb-0">
                        <i class="fas fa-info-circle"></i>
                        <small>
                            Les modifications seront enregistrées immédiatement après validation du formulaire.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
