{% extends 'base.html.twig' %}

{% block title %}
    {% if registration_mode %}Inscription{% else %}Connexion{% endif %} - Placeaupro
{% endblock %}

{% block body_class %}login-page{% endblock %}

{# Navigation blanche #}
{% block nav_style %}white{% endblock %}

{# Pas de CSS responsive pour cette page #}
{% block responsive_css %}{% endblock %}

{% block content %}
    <main class="login-main">
        <div class="login-container">
            {% if registration_mode %}
                {# FORMULAIRE D'INSCRIPTION #}
                {{ form_start(registrationForm, {'attr': {'class': 'login-form'}}) }}

                {# Affichage des erreurs de formulaire #}
                {{ form_errors(registrationForm) }}

                {# Messages flash de succès #}
                {% for message in app.flashes('success') %}
                    <div class="login-success">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form_row(registrationForm.firstname) }}
                {{ form_row(registrationForm.lastname) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword.first) }}
                {{ form_row(registrationForm.plainPassword.second) }}

                <label class="login-terms">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    <span>{{ form_label(registrationForm.agreeTerms) }}</span>
                </label>
                {{ form_errors(registrationForm.agreeTerms) }}

                <div class="login-actions">
                    <a href="{{ path('app_login') }}" class="login-button login-button--secondary">
                        CONNEXION
                    </a>
                    <button type="submit" class="login-button login-button--primary">
                        CRÉER MON COMPTE
                    </button>
                </div>

                {{ form_end(registrationForm) }}

            {% else %}
                {# FORMULAIRE DE CONNEXION #}
                {{ form_start(loginForm, {
                    'action': path('app_login'),
                    'attr': {'class': 'login-form'}
                }) }}

                {# Affichage des erreurs globales #}
                {% if error %}
                    <div class="login-error">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {# Messages flash de succès #}
                {% for message in app.flashes('success') %}
                    <div class="login-success">
                        {{ message }}
                    </div>
                {% endfor %}

                {{ form_row(loginForm.email) }}
                {{ form_row(loginForm.password) }}

                {# Token CSRF avec le nom attendu par form_login #}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="login-actions">
                    <button type="submit" class="login-button login-button--secondary">
                        CONNEXION
                    </button>
                    <a href="{{ path('app_register') }}" class="login-button login-button--primary">
                        CRÉER MON COMPTE
                    </a>
                </div>

                {{ form_end(loginForm, {'render_rest': false}) }}
            {% endif %}
        </div>
    </main>
{% endblock %}
